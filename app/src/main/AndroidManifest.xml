<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ca.uwaterloo.jobmine" >

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:label="@string/title_activity_login"
            android:windowSoftInputMode="adjustResize|stateVisible" >
        </activity>
        <activity
            android:name=".StudentProfileActivity"
            android:label="@string/title_activity_student_profile" >
        </activity>
        <activity
            android:name=".DocumentsActivity"
            android:label="@string/title_activity_documents" >
        </activity>
        <activity
            android:name=".JobInquiryActivity"
            android:label="@string/title_activity_job_inquiry" >
        </activity>
        <activity
            android:name=".JobShortlistActivity"
            android:label="@string/title_activity_job_shortlist" >
        </activity>
        <activity
            android:name=".ApplicationsActivity"
            android:label="@string/title_activity_applications" >
        </activity>
        <activity
            android:name=".InterviewsActivity"
            android:label="@string/title_activity_interviews" >
        </activity>
        <activity
            android:name=".RankingsActivity"
            android:label="@string/title_activity_rankings" >
        </activity>
        <activity
            android:name=".WorkReportEvaluationsActivity"
            android:label="@string/title_activity_work_report_evaluations" >
        </activity>
    </application>

</manifest>
