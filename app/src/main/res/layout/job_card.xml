<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/cardview_horizontal_padding"
    android:paddingRight="@dimen/cardview_horizontal_padding">
    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="6pt"
            android:paddingRight="6pt"
            android:paddingTop="1pt"
            android:paddingBottom="1pt">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/abc_text_size_menu_material"
                android:textColor="@color/primary_text_default_material_light"
                android:id="@+id/textView_title"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/abc_text_size_small_material"
                android:textColor="@color/secondary_text_default_material_light"
                android:id="@+id/textView_company"
                android:layout_below="@+id/textView_title"
                android:layout_alignStart="@+id/textView_title" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/abc_text_size_caption_material"
                android:textColor="@color/secondary_text_default_material_light"
                android:id="@+id/textView_location"
                android:layout_below="@+id/textView_company"
                android:layout_alignStart="@+id/textView_company" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>