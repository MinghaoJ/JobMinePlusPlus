<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/cardview_vertical_padding"
    android:paddingLeft="@dimen/cardview_horizontal_padding"
    android:paddingRight="@dimen/cardview_horizontal_padding">
    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="8sp"
            android:paddingRight="8sp"
            android:paddingTop="2sp"
            android:paddingBottom="2sp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/job_card_title_text"
                android:textColor="@color/primary_text_default_material_light"
                android:id="@+id/textView_title"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/job_card_employer_text"
                android:textColor="@color/secondary_text_default_material_light"
                android:id="@+id/textView_employer"
                android:layout_below="@+id/textView_title"
                android:layout_alignStart="@+id/textView_title" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/job_card_location_text"
                android:textColor="@color/secondary_text_default_material_light"
                android:id="@+id/textView_location"
                android:layout_below="@+id/textView_employer"
                android:layout_alignStart="@+id/textView_employer" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>