<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="ca.uwaterloo.jobmine.fragments.HomeFragment"
    android:id="@+id/home">

    <ImageView
        android:layout_width="103dp"
        android:layout_height="103dp"
        android:id="@+id/imageView3"
        android:layout_gravity="right|top"
        android:src="@drawable/abc_ic_voice_search_api_mtrl_alpha"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="562dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp" />

    <ImageButton
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/imageButton"
        android:src="@drawable/abc_ic_menu_paste_mtrl_am_alpha"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="112dp" />

    <ImageButton
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/imageButton2"
        android:layout_alignTop="@+id/imageButton"
        android:layout_toEndOf="@+id/imageButton"
        android:src="@drawable/abc_ic_menu_copy_mtrl_am_alpha" />

    <ImageButton
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/imageButton3"
        android:src="@drawable/abc_ic_voice_search_api_mtrl_alpha"
        android:layout_alignTop="@+id/imageButton2"
        android:layout_toStartOf="@+id/imageButton4" />

    <ImageButton
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/imageButton4"
        android:layout_alignTop="@+id/imageButton3"
        android:layout_alignParentEnd="true"
        android:src="@drawable/abc_btn_switch_to_on_mtrl_00012" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="       Profile"
        android:id="@+id/textView2"
        android:layout_below="@+id/imageButton2"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="  Applications"
        android:id="@+id/textView"
        android:layout_alignTop="@+id/textView2"
        android:layout_toEndOf="@+id/imageButton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="    Interviews"
        android:id="@+id/textView3"
        android:layout_alignBottom="@+id/textView"
        android:layout_alignStart="@+id/imageButton3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="      Ranking"
        android:id="@+id/textView4"
        android:layout_alignTop="@+id/textView3"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/imageButton3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Welcome to JobMine++"
        android:id="@+id/textView5"
        android:layout_alignBottom="@+id/imageView3"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="24dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton5"
        android:src="@drawable/search"
        android:layout_below="@+id/textView5"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Search"
        android:id="@+id/textView6"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
